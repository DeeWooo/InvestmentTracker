{
  "$schema": "./node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run next:dev",
    "beforeBuildCommand": "npm run next:build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3001"
  },
  "identifier": "com.deewooo.investmenttracker",
  "productName": "InvestmentTracker",
  "version": "0.1.2",
  "bundle": {
    "active": true,
    "targets": ["app", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: tauri: asset: https://asset.localhost; connect-src http://localhost:3001 ws://localhost:3001 tauri: https://tauri.localhost"
    },
    "windows": [
      {
        "title": "InvestmentTracker",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
